<Window x:Class="EtherCAT_Studio.DebugOutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sequence Debug Output" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Output Text Area -->
        <Border Grid.Row="0" BorderBrush="#444" BorderThickness="1" Background="#252526">
            <TextBox x:Name="OutputTextBox"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#1E1E1E"
                     Foreground="#D4D4D4"
                     Padding="10"/>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save to File" Width="120" Height="30" Margin="0,0,10,0"
                    Click="SaveToFile_Click"
                    Background="#0078D7" Foreground="White" FontSize="14"/>
            <Button Content="Close" Width="100" Height="30"
                    Click="Close_Click"
                    Background="#444" Foreground="White" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
