<Window x:Class="EtherCAT_Studio.PropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="속성 편집" Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#232323" Foreground="White" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Action" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox x:Name="ActionBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" Background="#333" Foreground="White"/>
        <TextBlock Text="Target" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox x:Name="TargetBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,4" Background="#333" Foreground="White"/>
        <TextBlock Text="Speed" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,4"/>
        <TextBox x:Name="SpeedBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,4" Background="#333" Foreground="White"/>
        <TextBlock Text="Comment" Grid.Row="3" Grid.Column="0" Margin="0,4,0,0"/>
        <TextBox x:Name="CommentBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,4" Background="#333" Foreground="White" AcceptsReturn="True"/>
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="확인" Width="80" Margin="0,0,8,0" Click="Ok_Click" Background="#0078D7" Foreground="White"/>
            <Button Content="취소" Width="80" Click="Cancel_Click" Background="#444" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
